<div class="image-cover hero-header bg-dark" data-overlay="0" style="height: 100vh;">
    <div class="container">
        <div class="form-group">
            <div class="card bg-transparent shadow text-center p-4">
                <div class="card-title">
                    <h3>
                        Kayıt Ol
                    </h3>
                </div>
                <div class="card-body">
                    <form action="/user/register" method="post">
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Adınız" name="name" autocomplete="off">
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Soyadınız" name="surname" autocomplete="off">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Kullanıcı Adı" name="username" autocomplete="off">
                            </div>
                            <div class="col">
                                <input type="password" class="form-control" placeholder="Şifre" name="password" autocomplete="off">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Mail Adresi" name="email" autocomplete="off">
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Telefon Numarası" name="phone_number" autocomplete="off">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <button class="btn btn-primary">Kayıt Ol</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>