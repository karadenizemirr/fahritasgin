<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{{title}} - Fahri TAŞKIRAN</title>
  <link rel="icon" type="image/x-icon" href="/public/img/favicon.png">

  <!-- Custom CSS -->
  <link href="/public/css/styles.css" rel="stylesheet">

</head>

<body>

  <div id="main-wrapper">
    <div class="header header-transparent change-logo">
      <div class="container">
        <nav id="navigation" class="navigation navigation-landscape">
          <div class="nav-header">
            <a class="nav-brand static-logo" href="#">
              <h1 class="text-white mt-3" style="font-size: 15px;">Fahri TAŞKIRAN</h1>
            </a>
            <a class="nav-brand fixed-logo" href="#">
              <h1 class="text-black mt-3" style="font-size: 15px;">Fahri TAŞKIRAN</h1>
            </a>
            <div class="nav-toggle"></div>
            <div class="mobile_nav">
              <ul>
                <li>
                  <a href="JavaScript:Void(0);" data-bs-toggle="modal" data-bs-target="#login" class="btn btn-info"><i
                      class="fas fa-sign-in-alt me-2"></i>Log In</a>
                </li>
              </ul>
            </div>
          </div>
          <div class="nav-menus-wrapper" style="transition-property: none;">
            <ul class="nav-menu">

              <li><a href="/">Anasayfa</a></li>
              {{#if isLogin}}
              <li><a href="/data/upload">Veri Yükle</a></li>
              <li><a href="documentations.html">Veri Deposu</a></li>
              {{/if}}

            </ul>
            {{#if isLogin}}
            <ul class="nav-menu nav-menu-social align-to-right">
              <li class="list-buttons ms-2">
                <a href="/user/logout" class="bg-info">Çıkış
                  Yap!</a>
              </li>
            </ul>
            {{else}}
            <ul class="nav-menu nav-menu-social align-to-right">
              <li><a href="/user/register">Kayıt Ol</a></li>
              <li class="list-buttons ms-2">
                <a href="JavaScript:Void(0);" data-bs-toggle="modal" data-bs-target="#login" class="bg-info">Giriş
                  Yap!</a>
              </li>
            </ul>
            {{/if}}
          </div>
        </nav>
      </div>
    </div>
    <!-- End Navigation -->
    <div class="clearfix"></div>
    <!-- ============================================================== -->
    <!-- Top header  -->
    <!-- ============================================================== -->


    {{{body}}}
    <!-- Log In Modal -->
    <div class="modal auto-off fade" id="login" tabindex="-1" role="dialog" aria-labelledby="loginmodal"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered login-pop-form" role="document">
        <div class="modal-content" id="loginmodal">
          <span class="mod-close" data-bs-dismiss="modal" aria-hidden="true"><i class="fas fa-close"></i></span>
          <div class="modal-header">
            <div class="mdl-title">
              <h4 class="modal-header-title">Giriş Yap</h4>
            </div>
          </div>
          <div class="modal-body">
            <div class="modal-login-form">
              <form method="post" action="/user/login">
                <div class="form-floating mb-4">
                  <input type="text" class="form-control" placeholder="Kullanıcı Adı" name="username">
                  <label>Kullanıcı Adı</label>
                </div>

                <div class="form-floating mb-4">
                  <input type="password" class="form-control" placeholder="Şifreniz" name="password">
                  <label>Şifre</label>
                </div>
                <div class="form-group">
                  <button class="btn btn-primary full-width font--bold btn-lg">Giriş Yap</button>
                </div>
              </form>
            </div>
          </div>
          <div class="modal-footer">
            <p>Halen bir hesabınız yok mu ?<a href="/user/register" class="theme-cl font--bold ms-1">Kayıt Ol</a></p>
          </div>
        </div>
      </div>
    </div>
    <!-- End Modal -->
  </div>
  <!-- ============================================================== -->
  <!-- End Wrapper -->
  <!-- ============================================================== -->


  <!-- ============================================================== -->
  <!-- All Jquery -->
  <!-- ============================================================== -->
  <script src="/public/js/jquery.min.js"></script>
  <script src="/public/js/popper.min.js"></script>
  <script src="/public/js/bootstrap.min.js"></script>
  <script src="/public/js/bootstrap-select.min.js"></script>
  <script src="/public/js/rangeslider.js"></script>
  <script src="/public/js/slick.js"></script>
  <script src="/public/js/counterup.min.js"></script>
  <script src="/public/js/jquery.magnific-popup.min.js"></script>
  <script src="/public/js/imagesloaded.pkgd.min.js"></script>
  <script src="/public/js/shuffle.min.js"></script>
  <script src="/public/js/wow.js"></script>
  <script src="/public/js/lunar.js"></script>


  <script src="/public/js/custom.js"></script>
  <!-- ============================================================== -->
  <!-- This page plugins -->
  <!-- ============================================================== -->

</body>

</html>